<controls:MetroWindow x:Class="CashRegisterDesktopApp.Views.AddToInventory"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CashRegisterDesktopApp.Views"
        xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
        mc:Ignorable="d"
        Title="AddToInventory" Height="381.4" Width="808.2">
    <Grid x:Name="ParentGrid" Margin="25,10,5,5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="5*"/>
        </Grid.ColumnDefinitions>
        
        <Grid x:Name="CrudOperationGrid">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>

            <Button Grid.Column="0" Grid.Row="0" Content="Add Item"/>
            <Button Grid.Column="0" Grid.Row="1" Content="Delete Item"/>
            <Button Grid.Column="0" Grid.Row="2" Content="Update Item"/>
            <Button Grid.Column="0" Grid.Row="3" Content="View Item"/>
        </Grid>
        <!--
            Add Item view
        -->
        

    </Grid>
    
</controls:MetroWindow>
